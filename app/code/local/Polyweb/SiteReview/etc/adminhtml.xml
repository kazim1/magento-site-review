                        </children>
                    </polyweb_sitereview>
                </children>
            </admin>
        </resources>
    </acl>
    <menu>
        <polyweb_sitereview translate="title" module="polyweb_sitereview">
            <title>Site Reviews</title>
            <sort_order>85</sort_order>
            <children>
                <sitereview translate="title" module="polyweb_sitereview">
                    <title>Site Review</title>
                    <action>adminhtml/sitereview_sitereview</action>
                    <sort_order>0</sort_order>
                </sitereview>
            </children>
        </polyweb_sitereview>
    </menu>
